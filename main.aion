import aion.math;

type Animal {
    name: String
    age: Int

    constructor(name: String) {
        it.name = name
    }

    fn bark() -> String {
        return "Woof!"
    }

}

fn Animal::animalToString() -> String {
    return "Animal(${it.name}, ${it.age})"
}

fn Animal::setAge(age: Int) {
    it.age = age
}

fn Animal::speak() -> String {
    return "I am an animal"
}

fn main() {
    a := Animal("Fido")
    a.setAge(5)
    println(a.animalToString())
}